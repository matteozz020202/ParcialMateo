<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4E00D7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/parcial"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#18D1BF">

        <LinearLayout
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/milogin"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/user"
                android:textSize="20dp"
                android:textColor="@color/white"/>
            
            <EditText
                android:id="@+id/edt_usuario"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:hint="Digita tu usuario..."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/contra"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/edt_contrasena"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:hint="Digita tu contraseÃ±a..."/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_ingresar"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:backgroundTint="#FF0000"
                android:text="Ingresar"
                android:textSize="15dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>